// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "features": {
    "edit_prediction_provider": "none"
  },
  "agent": {
    "profiles": {
      "ask": {
        "name": "Ask",
        "tools": {
          "contents": true,
          "diagnostics": true,
          "fetch": true,
          "list_directory": true,
          "project_notifications": false,
          "now": true,
          "find_path": true,
          "read_file": true,
          "open": true,
          "grep": true,
          "thinking": true,
          "web_search": true
        },
        "enable_all_context_servers": false,
        "context_servers": {
          "linear": {
            "tools": {
              "update_project": true,
              "update_issue": true,
              "search_documentation": true,
              "list_users": true,
              "list_teams": false,
              "list_projects": true,
              "list_project_labels": true,
              "list_my_issues": true,
              "list_issues": true,
              "list_cycles": true,
              "list_comments": true,
              "get_project": true,
              "get_issue_status": true,
              "get_issue": true,
              "create_issue": true,
              "create_comment": true
            }
          },
          "tidewave-mcp": {
            "tools": {
              "search_package_docs": true,
              "list_liveview_pages": true,
              "get_source_location": true,
              "get_package_location": true,
              "get_logs": true,
              "get_ecto_schemas": true,
              "get_docs": true
            }
          },
          "taskwarrior": {
            "tools": {
              "complete_task": true,
              "list_tasks": true,
              "get_task": true
            }
          }
        }
      }
    },
    "single_file_review": true,
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "model_parameters": [],
    "default_model": {
      "provider": "lmstudio",
      "model": "openai/gpt-oss-20b"
    }
  },
  "theme": "Ayu Dark",
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "autosave": "on_focus_change",
  "format_on_save": "on",
  "vim_mode": true,
  "cursor_blink": false,
  "vertical_scroll_margin": 0,
  "vim": {
    "use_system_clipboard": "always"
  },
  "tab_bar": {
    "show": false
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  "relative_line_numbers": true,
  "preferred_line_length": 90,
  "soft_wrap": "preferred_line_length",
  "git": {
    "inline_blame": {
      "enabled": false,
      "delay_ms": 500
    }
  },
  "terminal": {
    "alternate_scroll": "off",
    "blinking": "terminal_controlled",
    "copy_on_select": true,
    "line_height": "standard",
    "toolbar": {},
    "working_directory": "current_project_directory"
  },
  "languages": {
    "Elixir": {
      "language_servers": ["elixir-ls", "!expert", "!next-ls", "!lexical"]
    }
  },
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "classAttributes": ["class", "className", "ngClass", "styles"]
      }
    }
  },
  "context_servers": {},
  "language_models": {}
}
